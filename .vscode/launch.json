    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run build",    
            "name": "Run Build",
            "request": "launch",
            "type": "node-terminal"
        },

        {
            "command": "npm run dev",
            "name": "Run Dev Server",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run test",
            "name": "Run Tests",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9002/",
            "webRoot": "${workspaceFolder}"
        }
    ]
}